{
	"compilerOptions": {
    "importHelpers": true,
		"module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
		"target": "ES2019",
		"outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES2019"]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}